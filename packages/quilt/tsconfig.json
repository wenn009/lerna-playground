{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/stories/**/*"]
}
